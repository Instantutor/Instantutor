{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "nginx",
            "image": "Instantutor/nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "backend"],
            "memory": 100
        },
        {
            "name": "client",
            "image": "Instantutor/client",
            "hostname": "client",
            "essential": false,
            "memory": 300
        },
        {
            "name": "server",
            "image": "Instantutor/server",
            "hostname": "server",
            "essential": false,
            "memory": 300
        }
    ]
}